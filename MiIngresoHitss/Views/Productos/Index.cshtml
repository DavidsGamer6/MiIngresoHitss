@model IEnumerable<MiIngresoHitss.Entities.Producto>

<h1>Productos</h1>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.Precio</td>
                <td>@item.Stock</td>
                <td>
                    <a href="@Url.Action("Details", new { id = item.ProductoId })">Detalles</a> |
                    <form asp-action="AgregarAlCarrito" method="post" style="display:inline;">
                        <input type="hidden" name="productoId" value="@item.ProductoId" />
                        <button type="submit" class="btn btn-link">Agregar al Carrito</button>
                        <a href="@Url.Action("Details", new { id = item.ProductoId })">Detalles</a> |
                        <a href="@Url.Action("Edit", new { id = item.ProductoId })">Editar</a> |
                        <a href="@Url.Action("Delete", new { id = item.ProductoId })">Eliminar</a>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create")">Crear nuevo producto</a>
<a href="@Url.Action("VerCarrito")" class="btn btn-primary">Ver Carrito</a>
<a href="@Url.Action("Create")" class="btn btn-primary">Crear nuevo producto</a>
